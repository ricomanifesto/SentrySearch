# SentrySearch Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration 
# Use local PostgreSQL for development, AWS RDS for production
DB_HOST=localhost  # or your-rds-endpoint.amazonaws.com
DB_PORT=5432
DB_NAME=sentrysearch
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DEBUG=true

# API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cloudflare Workers Configuration
# URL of your deployed Cloudflare Workers endpoint for ML guidance
WORKERS_URL=https://sentry-search-hybrid.your-subdomain.workers.dev

# AWS S3 Configuration
# Get these from your AWS account or Terraform outputs
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
S3_BUCKET_NAME=your-s3-bucket-name

# Application Configuration
API_BASE_URL=http://localhost:8001
ENVIRONMENT=development

# Enable/Disable Features
ENABLE_REPORT_STORAGE=true
ENABLE_ML_GUIDANCE=true
ENABLE_TRACE_EXPORT=true